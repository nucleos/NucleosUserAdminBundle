{% extends '@NucleosUserAdmin/Admin/Security/layout.html.twig' %}

{% block login_box_content %}
    <p class="login-box-msg">
        {{ 'resetting.reset.submit'|trans({}, 'NucleosUserBundle') }}
    </p>

    {{ form_start(form, { 'action': path('nucleos_user_admin_resetting_reset', {'token': token}) }) }}
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {'attr': {
            'class': 'form-control',
            'placeholder': 'form.new_password'|trans({}, 'NucleosUserBundle')
        }}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {'attr': {
            'class': 'form-control',
            'placeholder': 'form.new_password_confirmation'|trans({}, 'NucleosUserBundle')
        }}) }}
    </div>
    <div class="row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">
                {{ 'resetting.reset.submit'|trans({}, 'NucleosUserBundle') }}
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock sonata_wrapper %}
